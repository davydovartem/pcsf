{
  "name": "pcsf",
  "displayName": "PCSF syntax highlighting for Bootfrost prover",
  "description": "Positively Constructed Standardized Formulas (PCSF) file syntax highlighting for Bootfrost prover",
  "license": "MIT",
  "publisher": "davydovartem",
  "author": {
    "name": "Artem Davydov",
    "email": "ethrik@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davydovartem/pcsf.git"
  },
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pcsf",
    "bootfrost",
    "prover",
    "syntax",
    "highlighting"
  ],
  "activationEvents": [
    "onLanguage:pcsf"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": "pcsf",
        "aliases": [
          "PCSF",
          "pcsf"
        ],
        "extensions": [
          ".pcsf",
          ".pcf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pcsf",
        "scopeName": "source.pcsf",
        "path": "./syntaxes/pcsf.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "pcsfSyntax.runBootfrost",
        "title": "Run Bootfrost",
        "category": "PCSF"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pcsfSyntax.runBootfrost",
          "when": "editorLangId == pcsf",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "pcsfSyntax.runBootfrost",
          "when": "editorLangId == pcsf"
        }
      ]
    },
    "configuration": {
      "title": "PCSF Syntax",
      "properties": {
        "pcsfSyntax.bootfrost.executablePath": {
          "type": "string",
          "default": "bootfrost",
          "description": "Путь к исполняемому файлу Bootfrost"
        },
        "pcsfSyntax.bootfrost.defaultStrategy": {
          "type": "string",
          "enum": [
            "plain",
            "general",
            "manualfirst",
            "manualbest"
          ],
          "default": "general",
          "description": "Стратегия по умолчанию для Bootfrost"
        },
        "pcsfSyntax.bootfrost.defaultLimit": {
          "type": "number",
          "default": 1000,
          "description": "Лимит шагов по умолчанию"
        },
        "pcsfSyntax.bootfrost.defaultOutputFile": {
          "type": "string",
          "default": "",
          "description": "Файл для сохранения вывода по умолчанию"
        },
        "pcsfSyntax.colors.aQuantifier": {
          "type": "string",
          "default": "#4545FF",
          "description": "Цвет для квантора ∀"
        },
        "pcsfSyntax.colors.eQuantifier": {
          "type": "string",
          "default": "#FF0000",
          "description": "Цвет для квантора ∃"
        },
        "pcsfSyntax.colors.variable": {
          "type": "string",
          "default": "#D19A66",
          "description": "Цвет для переменных"
        },
        "pcsfSyntax.colors.comment": {
          "type": "string",
          "default": "#5C6370",
          "description": "Цвет для комментариев"
        },
        "pcsfSyntax.colors.function": {
          "type": "string",
          "default": "#61AFEF",
          "description": "Цвет для функций"
        },
        "pcsfSyntax.colors.punctuation": {
          "type": "string",
          "default": "#ABB2BF",
          "description": "Цвет для пунктуации"
        },
        "pcsfSyntax.colors.constant": {
          "type": "string",
          "default": "#ffffff",
          "description": "Цвет для констант"
        },
        "pcsfSyntax.colors.string": {
          "type": "string",
          "default": "#98C379",
          "description": "Цвет для строк"
        },
        "pcsfSyntax.colors.comparison": {
          "type": "string",
          "default": "#C678DD",
          "description": "Цвет для операторов сравнения"
        },
        "pcsfSyntax.colors.arithmetic": {
          "type": "string",
          "default": "#E06C75",
          "description": "Цвет для арифметических операторов"
        },
        "pcsfSyntax.colors.directive": {
          "type": "string",
          "default": "#56B6C2",
          "description": "Цвет для директив"
        },
        "pcsfSyntax.colors.continuation": {
          "type": "string",
          "default": "#B22222",
          "description": "Цвет для продолжения строки"
        },
        "pcsfSyntax.colors.sets": {
          "type": "string",
          "default": "#56B6C2",
          "description": "Цвет для операторов множеств"
        }
      }
    },
    "debuggers": [
      {
        "type": "bootfrost",
        "label": "Bootfrost PCSF Prover",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Путь к PCSF файлу",
                "default": "${file}"
              },
              "strategy": {
                "type": "string",
                "enum": ["plain", "general", "manualfirst", "manualbest"],
                "description": "Стратегия доказательства",
                "default": "general"
              },
              "limit": {
                "type": "number",
                "description": "Максимальное количество шагов",
                "default": 1000
              },
              "json": {
                "type": "boolean",
                "description": "Включить JSON вывод",
                "default": false
              },
              "outputFile": {
                "type": "string",
                "description": "Файл для сохранения вывода",
                "default": ""
              }
            }
          }
        },
        "initialConfigurations": [
            {
                "type": "bootfrost",
                "request": "launch",
                "name": "Launch Bootfrost",
                "program": "${file}",
                "strategy": "general",
                "limit": 1000,
                "json": false,
                "outputFile": ""
            }
        ]
      }
    ]
  }
}
