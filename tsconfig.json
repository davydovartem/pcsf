{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "out", 
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "vscode"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "out"
  ]
}
